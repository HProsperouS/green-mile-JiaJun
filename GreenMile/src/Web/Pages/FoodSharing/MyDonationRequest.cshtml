@page
@model Web.Pages.FoodSharing.MyDonationRequestModel
@{

}
<main class="main">
    <div class="page-header mt-30 mb-50">
        <div class="container">
            <div class="archive-header">
                <div class="row align-items-center">
                    <div class="col-xl-8">
                        <h1 class="mb-15">My Donation Requests</h1>
                        <div class="breadcrumb">
                            <a href="index.html" rel="nofollow"><i class="fi-rs-home mr-5"></i>Home</a>
                            <span></span> Food Sharing <span></span> My Donation Requests
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row flex-row-reverse">
            <div class="col-lg-8-5">
                <div class="shop-product-fillter">
                    <div class="totall-product">
                        <p>
                            We found <strong class="text-brand">
                                @Model.MyRequestCount
                            </strong>
                            you requested
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <!--end product card-->
        @{
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">My Requests History</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" cellspacing="0">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Food Item</th>
                                <th scope="col">Date</th>
                                <th scope="col">Status</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.DonationRequestList)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Donation.CustomFood.Name</td>
                                <td>@item.Date</td>
                                <td>@item.Status</td>
                                <td width="20%">
                                    <button type="button" title="Delivery" class="btn btn-primary">
                                        <i class="fa fa-truck"></i>
                                    </button>
                                    <button type="button" title="Delete" class="btn btn-danger">
                                        <i class="fas fa-ban"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>               
        }      
    </div>
</main>
