@page
@model Web.Pages.FoodTracker.AddFoodItemModel
@{
}


<form class="mt-3" method="post">
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="MyFoodItem.Id"></label>
        <div class="col-sm-12">
            <input type="number" class="form-control" asp-for="MyFoodItem.Id" oninput="this.value = this.value.toString()"/>
        </div>

        <label class="col-sm-2 col-form-label" asp-for="MyFoodItem.Name"></label>
         <div class="col-sm-12">
            <input class="form-control" asp-for="MyFoodItem.Name"/>
        </div>

        <label class="col-sm-2 col-form-label" asp-for="MyFoodItem.Count"></label>
         <div class="col-sm-12">
            <input type="number" class="form-control" asp-for="MyFoodItem.Count"/>
        </div>

         <label class="col-sm-2 col-form-label" asp-for="MyFoodItem.Description"></label>
         <div class="col-sm-12">
            <input class="form-control" asp-for="MyFoodItem.Description"/>
        </div>

        <label class="col-sm-2 col-form-label" asp-for="MyFoodItem.ExpiryDate"></label>
         <div class="col-sm-12">
            <input type="date" class="form-control" asp-for="MyFoodItem.ExpiryDate"/>
        </div>
    </div
    

    <div class="row mb-3">
        <input type="submit" value="Add to Inventory" class="btn btn-primary " /> 

    </div>
</form>