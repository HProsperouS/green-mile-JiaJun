@page
@model Web.Pages.FoodTracker.IndexModel

<a class="btn btn-primary mt-3 float-end" asp-page="/FoodTracker/AddFoodItem">Add Food Item</a>
<table class="table mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Count</th>
            <th>Description</th>
            <th>ExpiryDate</th>
        </tr>
    </thead>
    <tbody>
        @{
            @foreach (var item in Model.FoodItemList)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Description</td>
                    <td>@item.ExpiryDate</td>
                    <td>
                        <form class="mt-3" method="post">
                            <input type="text" value="@item.Id" asp-for="Id" hidden />
                            <button class="btn btn-primary" type="submit">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
